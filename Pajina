    <script>
        // JavaScript para generar estrellas en el fondo
        function createStars() {
            const starBackground = document.querySelector('.starry-background');
            const numStars = 200; // Número de estrellas a generar

            for (let i = 0; i < numStars; i++) {
                const star = document.createElement('div');
                star.classList.add('star');
                star.style.left = Math.random() * 100 + '%';  // Posición horizontal
                star.style.animationDuration = Math.random() * 3 + 1 + 's';  // Duración del parpadeo
                star.style.animationDelay = Math.random() * 5 + 's';  // Retraso de parpadeo
                starBackground.appendChild(star);
            }
        }

        createStars();
    </script>

